		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.0",
		"vite-plugin-static-copy": "^0.17.0",
		"vitest": "^1.0.0"
	},
	"type": "module",
	"dependencies": {
		"@codemirror/lang-python": "^6.1.3",
